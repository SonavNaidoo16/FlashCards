<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewScreen">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="609dp"
        android:layout_height="1037dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_3" />

    <TextView
        android:id="@+id/tvReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="20dp"
        android:text="REVIEW"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReviewS1"
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:layout_marginTop="48dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvReview" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="202dp"
        android:layout_height="268dp"
        android:layout_marginBottom="192dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent">

      <RadioButton
          android:id="@+id/radNM"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Nelson Mandela was the president in 1994"
          android:textColor="#000000"
          android:textSize="16sp"
          android:textStyle="bold" />

      <RadioButton
          android:id="@+id/radFrance"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="The capital of France is Berlin"
          android:textColor="#000000"
          android:textSize="16sp"
          android:textStyle="bold" />

      <RadioButton
          android:id="@+id/radLungs"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="The human body has four lungs."
          android:textColor="#000000"
          android:textSize="16sp"
          android:textStyle="bold" />

      <RadioButton
          android:id="@+id/radKotlin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Kotlin is used for Android development"
          android:textColor="#000000"
          android:textSize="16sp"
          android:textStyle="bold" />

      <RadioButton
          android:id="@+id/radWater"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Water freezes at 0Â°C."
          android:textColor="#000000"
          android:textSize="16sp"
          android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:id="@+id/btnShow"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="212dp"
        android:backgroundTint="#FFAB40"
        android:text="Show"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/btnExitMain"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="212dp"
        android:backgroundTint="#FF6F01"
        android:text="EXIT"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShow" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>